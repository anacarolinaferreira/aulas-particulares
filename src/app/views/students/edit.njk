{% extends "layout.njk" %}

{% block content %}
    <div class="conteudo">
        <section class="imagem" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
        <section>
            <div class="detalhes">

                <form method="POST" action="/students?_method=PUT">
                    <h3>Editar cadastro</h3>

                    {% include 'students/fields.njk'%}

                    <input type="hidden" name="id" value="{{student.id}}">

                    <div class="botoes">
                        <button type="submit">Salvar</button>

                    </form>

                    <form id="form-delete" action="/students?_method=DELETE" method="post">
                        <input type="hidden" name="id" value="{{student.id}}">
                        <button type="submit">Deletar</button>
                    </div>

                    {% include '../confirm.njk'%}

                </form>
            </div>
        </section>

    </div>
{% endblock content %}